<% include common/header.ejs %>
<% include common/right_column.ejs %>

<div class="container">
    <%- include('common/navs.ejs',{category: searchCategory, amount: pizzas.length}); %>
    <% for(var i=0; i<pizzas.length;i++) {%>
        <% if (pizzas[i].is_new) {%>
            <div class="thumbnail pizza-card new-pizza">
        <% }else if (pizzas[i].is_popular) {%>
            <div class="thumbnail pizza-card popular-pizza">
        <% }else {%>
            <div class="thumbnail pizza-card">
        <%} %>
        <img class="pizza-img" src="<%= pizzas[i].icon %>">
        <div class="caption">
            <h3 class="pizza-title">
                <%= pizzas[i].title %>
            </h3>
            <span class="pizza-category text-muted">
                <%= pizzas[i].type %></span>
            <p class="pizza-description"><%Object.keys(pizzas[i].content).forEach(function(k){%>
                <%=pizzas[i].content[k] %>,
                <%}); %> </p>
                <% if (!pizzas[i].small_size) {%>
                    <span class="pizza-sizes-big">
                        <i class='fas'>&#xf338;</i> <span class="pizza-size"><%=pizzas[i].big_size.size%></span>&nbsp;&nbsp;
                        <i class='fas'>&#xf562;</i> <span class="pizza-weight"><%=pizzas[i].big_size.weight%></span>
                        <span class="pizza-price"><%=pizzas[i].big_size.price%></span> грн.
                        <button class="btn btn-buy-big" data-tooltip="Купити велику" data-id="<%=pizzas[i]._id%>">Купити</button>
                    </span>
                <% }else if (!pizzas[i].big_size) {%>
                    <span class="pizza-sizes-small">
                        <i class='fas'>&#xf338;</i> <span class="pizza-size"><%=pizzas[i].small_size.size%></span>&nbsp;&nbsp;
                        <i class='fas'>&#xf562;</i> <span class="pizza-weight"><%=pizzas[i].small_size.weight%></span>
                        <% if (pizzas[i].small_size.price < 100) {%>
                            <span class="pizza-price"><%=pizzas[i].small_size.price%></span><br/> грн.
                        <% }else {%>
                            <span class="pizza-price"><%=pizzas[i].small_size.price%></span> грн.
                        <% }%>
                        <button class="btn btn-buy-small" data-tooltip="Купити маленьку" data-id="<%=pizzas[i]._id%>">Купити</button>
                    </span>
                <% }else {%>
                    <span class="pizza-sizes-small">
                        <i class='fas'>&#xf338;</i> <span class="pizza-size"><%=pizzas[i].small_size.size%></span>&nbsp;&nbsp;
                        <i class='fas'>&#xf562;</i> <span class="pizza-weight"><%=pizzas[i].small_size.weight%></span>
                        <% if (pizzas[i].small_size.price < 100) {%>
                            <span class="pizza-price"><%=pizzas[i].small_size.price%></span><br/> грн.
                        <% }else {%>
                            <span class="pizza-price"><%=pizzas[i].small_size.price%></span> грн.
                        <% }%>
                        <button class="btn btn-buy-small" data-tooltip="Купити маленьку" data-id="<%=pizzas[i]._id%>">Купити</button>
                    </span>
                    <span class="pizza-sizes-big">
                        <i class='fas'>&#xf338;</i> <span class="pizza-size"><%=pizzas[i].big_size.size%></span>&nbsp;&nbsp;
                        <i class='fas'>&#xf562;</i> <span class="pizza-weight"><%=pizzas[i].big_size.weight%></span>
                        <span class="pizza-price"><%=pizzas[i].big_size.price%></span> грн.
                        <button class="btn btn-buy-big" data-tooltip="Купити велику" data-id="<%=pizzas[i]._id%>">Купити</button>
                    </span>
                <%} %>
        </div>
    </div>
    <%} %>
</div>

<% include common/footer.ejs %>